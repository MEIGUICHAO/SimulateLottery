<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.itworks.simulatelottery.MainActivity">

    <LinearLayout

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_date"
            android:hint="date"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/et_urlnum"
            android:hint="urlnum"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/et_size"
            android:hint="size"
            android:inputType="number"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/et_length"
            android:hint="length"
            android:visibility="gone"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/et_blank"
            android:hint="begin"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/et_max2Int"
            android:hint="difMaxNum"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_endBlank"
            android:hint="beginCount"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_bigbegin"
            android:hint="bigbigin"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_danger"
            android:hint="danger"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_less_blank"
            android:hint="lessBlank"
            android:visibility="gone"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_endBuy"
            android:text="50"
            android:hint="endBuyNum"
            android:inputType="number"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sc" />
        <Button
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_two"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="two!" />
        <TextView
            android:id="@+id/tv_earn"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_buy"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_end"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>